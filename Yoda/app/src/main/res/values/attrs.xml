<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="lowerText" format="boolean" />
    <attr name="lowerLine" format="boolean" />

    <declare-styleable name="FullWidthItem">
        <attr name="android:text"/>
        <attr name="lowerText" />
        <attr name="lowerLine" />
    </declare-styleable>

    <declare-styleable name="FullWidthButton">
        <attr name="android:text"/>
        <attr name="lowerText" />
        <attr name="lowerLine" />
    </declare-styleable>

    <declare-styleable name="FullWidthSymbolButton">
        <attr name="android:text"/>
        <attr name="visualPromptIcon" format="reference" />
        <attr name="lowerLine" />
    </declare-styleable>

    <declare-styleable name="FullWidthCheckbox">
        <attr name="android:text"/>
        <attr name="lowerText" />
        <attr name="lowerLine" />
    </declare-styleable>

    <declare-styleable name="CustomActionbar">
        <attr name="android:text"/>
        <attr name="android:textColor"/>
        <attr name="backgroundType" format="integer"/>
        <attr name="backButtonColor" format="string"/>
        <attr name="searchButton" format="boolean"/>
        <attr name="settingsButton" format="boolean"/>
        <attr name="searchBar" format="boolean"/>
    </declare-styleable>

</resources>